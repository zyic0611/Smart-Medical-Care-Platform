<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yicheng.mapper.BedMapper">
    <insert id="insert" parameterType="com.yicheng.entity.Bed">
        insert into `bed`
            (id, bed_number, status) VALUES (#{id},#{bedNumber},#{status})

    </insert>



    <update id="updateStatus">

        update bed set status =#{status} where id =#{id}

    </update>


    <update id="updateById">
        update bed
        <set>
            <if test = "bedNumber != null" >bed_number=#{bedNumber},</if>
            <if test = "status != null" >status=#{status}</if>
        </set>
        where id =#{id}
    </update>


    <delete id="deleteById">
        delete from bed where id = #{id}
    </delete>


    <select id="selectPage" resultType="com.yicheng.entity.Bed">

        select * from bed
        <where>
            <if test="bedNumber != null and bedNumber != ''">
                and bed_number like concat('%', #{bedNumber}, '%')
            </if>
        </where>
        order by id desc
    </select>



    <select id="selectFreeBeds" resultType="com.yicheng.entity.Bed">
        select * from bed where status=0

    </select>
    <select id="selectByNumber" resultType="com.yicheng.entity.Bed">
        select * from bed where bed_number=#{bedNumber}
    </select>
    <select id="selectById" resultType="com.yicheng.entity.Bed">
        select * from bed where id=#{id}
    </select>
</mapper>